<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui"> 
  <ribbon startFromScratch="false"> 
    <tabs> 
      <tab id="CustomTab" label="Pen Tool"> 
        <group id="SimpleControls" label="Pen Tool"> 
          <button id="EnablePenTool" imageMso="KeepBackgroundRemoval" size="large" 
            label="Enable" 
            screentip="Display Pen Toolbar during slide show" 
            onAction="PenTool_Init.InitializeApp"/> 
          <button id="DisablePenTool" imageMso="GuideDelete" size="large" 
            label="Disable" 
            screentip="Disable the Pen Toolbar" 
            onAction="PenTool_Init.DisableToolbar"/> 
        </group> 
      </tab> 
    </tabs> 
  </ribbon> 
</customUI> 